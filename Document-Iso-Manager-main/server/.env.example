# Example environment configuration
NODE_ENV=production
PORT=5000
CORS_ORIGIN=http://localhost:5173

# Encryption key used for file storage (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# MongoDB connection string
DB_URI=mongodb://localhost:27017/iso_doc_manager

# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
SUPPORT_EMAIL=support@example.com

# Google Drive configuration
GOOGLE_DRIVE_FOLDER_ID=your-folder-id
# GOOGLE_DRIVE_CREDENTIALS={...JSON credentials...}

# Session configuration
SESSION_SECRET=your-session-secret

# Application base URL
APP_URL=https://your-application-url.com

# Default admin user (set CREATE_DEFAULT_ADMIN=true only for first run)
CREATE_DEFAULT_ADMIN=false
DEFAULT_ADMIN_EMAIL=admin@example.com
# DEFAULT_ADMIN_PASSWORD=your-admin-password
